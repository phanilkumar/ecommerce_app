# Environment variables for Docker development
# Copy this file to .env and modify as needed

# Database configuration
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgres://postgres:password@db:5432/ecommerce_app_development

# Rails configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5

# Application secrets (generate new ones for production)
SECRET_KEY_BASE=your_secret_key_base_here

# Email configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=

# External services (optional)
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# OAuth Configuration
# NOTE: OAuth credentials are now stored in Rails encrypted credentials
# To add/update OAuth credentials, use: rails credentials:edit
# 
# For development, you can still use environment variables:
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
#
# For production, use Rails credentials or cloud platform secrets management
