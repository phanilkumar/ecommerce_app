<div class="row">
  <div class="col-12">
    <div class="jumbotron bg-light p-5 rounded">
      <h1 class="display-4">Welcome to Ecommerce App</h1>
      <p class="lead">Your one-stop destination for online shopping with secure authentication powered by Devise.</p>
      <hr class="my-4">
      <% if user_signed_in? %>
        <p>Hello, <strong><%= current_user.email %></strong>! You are successfully logged in.</p>
        <p class="mb-0">You can now access all the features of our ecommerce platform.</p>
      <% else %>
        <p>Please sign up or log in to access all features.</p>
        <div class="d-flex gap-2">
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <i class="bi bi-person-circle"></i> Profile
          </h5>
          <p class="card-text">Manage your account settings and personal information.</p>
          <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <i class="bi bi-shop"></i> Products
          </h5>
          <p class="card-text">Browse and manage products in our store.</p>
          <button class="btn btn-primary" disabled>Coming Soon</button>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <i class="bi bi-cart"></i> Orders
          </h5>
          <p class="card-text">View your order history and track shipments.</p>
          <button class="btn btn-primary" disabled>Coming Soon</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
